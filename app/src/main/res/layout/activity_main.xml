<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/other_fond_ecran"
    android:padding="16dp">

    <!-- EditText pour entrer l'ID -->
    <EditText
        android:id="@+id/editTextId"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="ID" />

    <!-- EditText pour entrer le nom -->
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Nom" />

    <!-- EditText pour entrer le prix -->
    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        android:textColorHint="@color/black"
        android:hint="Prix" />

    <!-- EditText pour entrer l'URL de l'image -->
    <EditText
        android:id="@+id/editTextImageURL"
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:hint="Image URL" />

    <!-- LinearLayout pour les boutons alignés horizontalement -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Bouton pour ajouter un enregistrement -->
        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:textSize="9sp"
            android:backgroundTint="#ECDDB6"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:text="Add" />

        <!-- Bouton pour rechercher les enregistrements -->
        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="0dp"
            android:backgroundTint="#ECDDB6"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="9sp"
            android:layout_marginTop="16dp"
            android:text="Search" />

        <!-- Bouton pour mettre à jour un enregistrement -->
        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ECDDB6"
            android:textSize="9sp"
            android:layout_marginTop="16dp"
            android:text="Update" />

        <!-- Bouton pour supprimer un enregistrement -->
        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="9sp"
            android:backgroundTint="#ECDDB6"
            android:layout_marginTop="16dp"
            android:text="Delete" />
    </LinearLayout>

    <!-- ListView pour afficher les enregistrements -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />

</LinearLayout>